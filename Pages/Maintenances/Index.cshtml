@page
@model mobisolProject.Pages.Maintenances.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="well">
<h2>Maintenance Database</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Maintenance[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maintenance[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maintenance[0].SaleId)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Maintenance) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
